<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="java_classes.ConnectBroker">

    <LinearLayout
        android:background="#48AAAD"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:background="#82EEFD"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <Spinner
        android:id="@+id/actionSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="0dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/statusSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/measureSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/compAndText"
            android:orientation="horizontal"
            android:padding="0dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/compSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        >

        <EditText
            android:id="@+id/et_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Enter text..."
            android:lines="1" />
    </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        >
    <LinearLayout
        android:orientation="horizontal"
        android:padding="0dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/bt_showSpinners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Add" />

    <Button
        android:id="@+id/bt_clear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="clear" />

    <Button
        android:id="@+id/bt_confirm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="confirm" />

    </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout

        android:background="#63c5da"
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <CheckBox
            android:id="@+id/SR1cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:padding="5dp"
            android:text="Integrity"
            android:textColor="#f5f5f5"
            android:textSize="15sp"
            android:textStyle="italic" />

        <CheckBox
            android:id="@+id/SR2cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:padding="5dp"
            android:text="Availability"
            android:textColor="#f5f5f5"
            android:textSize="15sp"
            android:textStyle="italic" />

        <CheckBox
            android:id="@+id/SR3cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:padding="5dp"
            android:text="Security"
            android:textColor="#f5f5f5"
            android:textSize="15sp"
            android:textStyle="italic" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <CheckBox
            android:id="@+id/SR4cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:padding="5dp"
            android:text="SR 4"
            android:textColor="#f5f5f5"
            android:textSize="15sp"
            android:visibility="invisible"
            android:textStyle="italic" />

        <CheckBox
            android:id="@+id/SR5cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:padding="5dp"
            android:text="SR 5"
            android:textColor="#f5f5f5"
            android:textSize="15sp"
            android:visibility="invisible"
            android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <ListView
        android:background="#FFFEF2"
        android:id="@+id/list_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>